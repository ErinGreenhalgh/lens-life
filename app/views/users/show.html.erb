<%= render partial: 'shared/navbar' %>
<% if current_user %>
  <div class="container basic-info">
    <div class="profile-pic">
      <img src="<%= @user.profile_pic %>" alt="profile-pic" />
    </div>
    <div class="username">
      <h1><%= @user.nickname %></h1>
    </div>
    <div class="row stats">
      <div class="col-md-2" id="followers">
        <p>followers</p>
      </div>
      <div class="col-md-2" id="starred">
        <%= current_user.starred_count(current_user) %><br>
        <p>starred</p>
      </div>
      <div  class="col-md-2" id="following">
        Following
      </div>
    </div>
  </div>
  <%= link_to "My Repos", repos_path %>
<% end %>
